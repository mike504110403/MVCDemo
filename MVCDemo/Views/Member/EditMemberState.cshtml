@model MVCDemo.Models.MemberState
@{
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<h2>修改會員資料</h2>
<br />

<form method="post" action="/Member/EditMemberState">
    <div class="form-group row">
        <label for="Id" class="col-sm-2">會員編號</label>
        <div class="col-sm-10">
            <input type="text" id="Id" name="Id" class="form-control" value="@Model.Id" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label for="UserId" class="col-sm-2">會員帳號</label>
        <div class="col-sm-10">
            <input type="text" id="UserId" name="UserId" class="form-control" value="@Model.UserId" />
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
    </div>
    <div class="form-group row">
        <label for="nickName" class="col-sm-2">會員暱稱</label>
        <div class="col-sm-10">
            <input type="text" id="nickName" name="nickName" class="form-control" value="@Model.nickName" />
            @Html.ValidationMessageFor(model => model.nickName)
        </div>
    </div>
    <div class="form-group row">
        <label for="CardLevel" class="col-sm-2">會員等級</label>
        <div class="col-sm-10">
            <input type="text" id="CardLevel" name="CardLevel" class="form-control" value="@Model.CardLevel" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label for="phoneNumber" class="col-sm-2">會員電話</label>
        <div class="col-sm-10">
            <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" value="@Model.phoneNumber" />
            @Html.ValidationMessageFor(model => model.phoneNumber)
        </div>
    </div>
    <div class="form-group row">
        <label for="eMail" class="col-sm-2">會員信箱</label>
        <div class="col-sm-10">
            <input type="text" id="eMail" name="eMail" class="form-control" value="@Model.eMail" />
            @Html.ValidationMessageFor(model => model.eMail)
        </div>
    </div>
        <input class="btn btn-default" type="submit" value="儲存" />
</form>

