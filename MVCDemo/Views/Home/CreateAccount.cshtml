@model MVCDemo.Models.MemberState
@{
    ViewBag.Title = "會員註冊";
}

<h2>會員註冊</h2>
<br />

<form method="post" action="/Home/CreateAccount">
    <div class="form-group row">
        <label for="UserId" class="col-sm-2">帳號</label>
        <div class="col-sm-10">
            <input type="text" id="UserId" name="UserId" class="form-control" />
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
    </div>
    <div class="form-group row">
        <label for="Password" class="col-sm-2">密碼</label>
        <div class="col-sm-10">
            <input type="text" id="Password" name="Password" class="form-control" />
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    @*<div class="form-group row">
        <label for="Password" class="col-sm-2">確認密碼</label>
        <div class="col-sm-10">
            <input type="text" id="RePassword" name="RePassword" class="form-control" />
            @Html.ValidationMessageFor(model => model.RePassword)
        </div>
    </div>*@
    <div class="form-group row">
        <label for="nickName" class="col-sm-2">暱稱</label>
        <div class="col-sm-10">
            <input type="text" id="nickName" name="nickName" class="form-control" />
            @Html.ValidationMessageFor(model => model.nickName)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-default" type="submit" value="加入會員" />
            @ViewBag.Message
        </div>
    </div>
</form>

